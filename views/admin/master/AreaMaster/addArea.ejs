<!doctype html>
<style>
  .ck-editor__editable_inline {
      min-height: 150px;
  }
  </style>
<%- include('../../layouts/top_header') %>

  <body class="layout-fluid theme-light">
    <div class="page">
      <%- include('../../layouts/header') %>

        <div class="page-wrapper">
          <% if(error.length>0){ %>
            <script>new Toasteur("top-right", 3000).error(" <%= error %>", 'Error!');</script>
               
            <% } %>

        <% if(success.length>0){ %>
                <script>new Toasteur("top-right", 3000).success(" <%= success %>", 'Success!');</script>
                <% } %>    
          <!-- Page header -->
          <div class="page-header d-print-none">
            <div class="container-xl">
              <div class="row g-2 align-items-center">

                <div class="col">
                  <!-- Page pre-title -->
                  <div class="page-pretitle">
                    <a href="/dashboard">Dashboard</a>
                  </div>
                  <h2 class="page-title">
                    Add New Area
                  </h2>
                </div>

                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                      
                      <a href="/DepartmentList" class="btn btn-primary d-none d-sm-inline-block">
                        <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                      <i class="fa fa-arrow-left" aria-hidden="true"></i>
                         Back To List
                      </a>
                      <a href="#" class="btn btn-primary d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#add" aria-label="Create new report">
                        <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M12 5l0 14"></path><path d="M5 12l14 0"></path></svg>
                      </a>
                    </div>
                  </div>
               

              </div>
            </div>
          </div>
          <!-- Page body -->

          <div class="page-body">
            <div class="container-xl">
              <div class="col-12">
                <div class="row row-cards">
                    <div class="card">
                          <div class="card-header">
                            <h3 class="card-title">Add Area</h3>
                          </div>
                         
                          <form  method="post" class="card" name="addArea"  id="addArea"  action="/addArea">
                            <fieldset class="form-fieldset">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm-4">
                                      <label class="form-label required">Area Name:</label>
                                      <input type="text" name="area" id="area" class="form-control" autocomplete="off" placeholder="Enter the Area Name">
                                    </div>
                                    <div class="col-sm-4">
                                        <label class="form-label required"> Sub Area Name:</label>
                                        <input type="text" name="subarea" id="subarea" class="form-control" autocomplete="off" placeholder="Enter the Sub Area Name">
                                      </div>
                                    <div class="col-sm-4">
                                      <label class="form-label required">Circle Id:</label>
                                        <select class="form-control form-select"  name="circle_id" id="circle_id">
                                          <option value="">Select Id</option>
                                          <<option value="9">Z1</option>
                                          <option value="10">Z2</option>
                                          <option value="11">Z3</option>
                                          <option value="12">Z4</option>
                                          <option value="13">Z5</option>
                                          
                                        </select>
                                    </div>
                                    <div class="col-sm-4">
                                      <label class="form-label required"> Status:</label>
                                        <select class="form-control form-select"  name="status" id="status">
                                          <option value="">Select Status</option>
                                          <option value="1">Active</option>
                                          <option value="0">Deactive</option>
                                        </select>
                                    </div>
                                </div>
                                   
                                </div>
                          </fieldset>
                          <div class="card-footer text-end">
                            <center >
                              <a href="#" class="btn btn-warning">Cancel</a>
                              <button type="button" class="btn btn-primary" onclick="validateform()" >Save</button>
                           </center>
                          </div>
                      </form> 
                      </div>
                </div>
              </div>
            </div>
          </div>
       
          <%- include('../../layouts/footer') %>
        </div>
    </div>
  </body>

  <script>
    function validateform() 
    {
      
    var vo_name = $('#arae').val();
    var block_name = $('#subarea').val();
    var clf_name = $('#circle_id').val();
    var status_name = $('#status').val();
    if(vo_name =='')
      {
        new Toasteur("top-right", 3000).error("arae name is required", 'Error!');
        $('#arae').focus();
        return false;
      }
   
     if(block_name =='')
      {
        new Toasteur("top-right", 3000).error("subarea name is required", 'Error!');
        $('#subarea').focus();
        return false;
      } 
      if(clf_name =='')
      {
        new Toasteur("top-right", 3000).error("status name is required", 'Error!');
        $('#status').focus();
        return false;
      }
      
      else
      {
       $("#addArea").submit();  
       //$("#loader").show();  
        return true;
      }
  }

// block alphabets and special character //
function isNumber(evt) {
  evt = (evt) ? evt : window.event;
  var charCode = (evt.which) ? evt.which : evt.keyCode;
  if (charCode > 31 && (charCode < 48 || charCode > 57)) {

    swal({
      title: "Error",
      text: "Only Number allowed!",
      type: "error",
      timer: 1500,
      showCancelButton: true,
      confirmButtonClass: 'btn-danger',
    });
    return false;
  }
  return true;
}
    
    </script>
    